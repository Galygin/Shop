@model IEnumerable<Domain.Models.Purchase>
           @using System.Web.Security

@{
    ViewBag.Title = "Корзина";
}

<h2>Корзина пользователя "@User.Identity.Name"</h2>
<div class="row">
    <div class="col-lg-5">
        <table class="table">
            <tr>
                <th>Номер покупки</th>
                <th>Номер продукта</th>
                <th>Название лимонада</th>
                <th>Стоимость</th>
            </tr>
            @foreach (var i in Model)
            {
                if (i.AccountName == @User.Identity.Name)
                {
                    <tr>
                        <td>@i.ID</td>
                        <td>@i.ProductID</td>
                            @foreach (var j in ViewBag.Products)
                            {
                                if (i.ProductID == j.ID)
                                {
                                    <td>@j.Name</td>
                                    <td>@j.Price</td>
                                }
                            }
                    </tr>
                }
            }
        </table>
    </div>
</div>
